# Unix
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias v="vim ."

# Dotfiles
alias dotfiles="cd ~/dotfiles && vim ."
alias aliases="vim ~/.aliases"
alias zshrc="vim ~/.zshrc"
alias vimrc="vim ~/.vimrc"
alias vim-bundles="vim ~/.vimrc.bundles"
alias gitconfig="vim ~/.gitconfig"

# Bundler
alias b="bundle"

# Git
alias s="git status -s"
alias gcl="git branch | grep -v 'master' | xargs git branch -D"
alias gd="git diff"
alias gs="git show"
alias gcp="git cherry-pick"
alias gco="git checkout"
alias glog="git log --oneline --decorate --color --graph"
alias ga="git add"
alias gaa="git add --all"
alias gc="git commit"
alias gcm="git commit -m"
alias gcma="git commit --amend"
alias push="git push"
alias push!="git push -f"
alias pull="git pull"

# Rails utilities
alias rc="bundle exec rails console"
alias rs="bundle exec rails server"

# Rails db utilities
alias setup="rails db:setup"
alias seed="rails db:seed"
alias migrate="rails db:migrate db:rollback && rails db:migrate db:test:prepare"
alias rollback="rails db:rollback"
alias rgm="rails g migration"

# Docker
alias dc="docker-compose"
alias dcu="docker-compose up"
alias dcd="docker-compose down"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
